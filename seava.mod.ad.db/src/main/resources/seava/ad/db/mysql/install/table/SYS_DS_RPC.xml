<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

	<changeSet author="seava" id="TBL-SYS_DS_RPC">
		<createTable tableName="SYS_DS_RPC">
			<column name="ACTIVE" type="int(1)">
				<constraints nullable="false"/>
			</column>
			<column name="CREATEDAT" type="datetime">
				<constraints nullable="false"/>
			</column>
			<column name="CREATEDBY" type="varchar(32)">
				<constraints nullable="false"/>
			</column>
			<column name="DESCRIPTION" type="text"/>
			<column name="ID" type="varchar(64)">
				<constraints nullable="false"/>
			</column>
			<column name="MODIFIEDAT" type="datetime">
				<constraints nullable="false"/>
			</column>
			<column name="MODIFIEDBY" type="varchar(32)">
				<constraints nullable="false"/>
			</column>
			<column name="NAME" type="varchar(255)">
				<constraints nullable="false"/>
			</column>
			<column name="NOTES" type="text"/>
			<column name="REFID" type="varchar(64)">
				<constraints nullable="false"/>
			</column>
			<column name="VERSION" type="bigint(10)"/>
			<column name="DATASOURCE_ID" type="varchar(64)">
				<constraints nullable="false"/>
			</column>
		</createTable>
	</changeSet>

	<changeSet author="seava" id="PK-SYS_DS_RPC">
		<addPrimaryKey 
			constraintName="PK_SYS_DS_RPC"
			tableName="SYS_DS_RPC"
			columnNames="ID"/>
	</changeSet>
	
	<changeSet author="seava" id="UK-SYS_DS_RPC-1">
		<addUniqueConstraint
			constraintName="UK_SYS_DS_RPC1"
			tableName="SYS_DS_RPC"
			columnNames="DATASOURCE_ID,NAME"/>
	</changeSet>

</databaseChangeLog>
