<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

	<changeSet author="seava" id="TBL-AD_VIEW_STATE">
		<createTable tableName="AD_VIEW_STATE">
			<column name="ACTIVE" type="int(1)">
				<constraints nullable="false"/>
			</column>
			<column name="CLIENTID" type="varchar(64)">
				<constraints nullable="false"/>
			</column>
			<column name="CMP" type="varchar(255)">
				<constraints nullable="false"/>
			</column>
			<column name="CMPTYPE" type="varchar(16)">
				<constraints nullable="false"/>
			</column>
			<column name="CREATEDAT" type="datetime">
				<constraints nullable="false"/>
			</column>
			<column name="CREATEDBY" type="varchar(32)">
				<constraints nullable="false"/>
			</column>
			<column name="DESCRIPTION" type="text"/>
			<column name="ID" type="varchar(64)">
				<constraints nullable="false"/>
			</column>
			<column name="MODIFIEDAT" type="datetime">
				<constraints nullable="false"/>
			</column>
			<column name="MODIFIEDBY" type="varchar(32)">
				<constraints nullable="false"/>
			</column>
			<column name="NAME" type="varchar(255)">
				<constraints nullable="false"/>
			</column>
			<column name="NOTES" type="text"/>
			<column name="REFID" type="varchar(64)">
				<constraints nullable="false"/>
			</column>
			<column name="VALUE" type="text"/>
			<column name="VERSION" type="bigint(10)"/>
		</createTable>
	</changeSet>

	<changeSet author="seava" id="PK-AD_VIEW_STATE">
		<addPrimaryKey 
			constraintName="PK_AD_VIEW_STATE"
			tableName="AD_VIEW_STATE"
			columnNames="ID"/>
	</changeSet>

</databaseChangeLog>
