<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

	<changeSet author="seava" id="TBL-AD_USR">
		<createTable tableName="AD_USR">
			<column name="ACTIVE" type="int(1)">
				<constraints nullable="false"/>
			</column>
			<column name="CLIENTID" type="varchar(64)">
				<constraints nullable="false"/>
			</column>
			<column name="CODE" type="varchar(64)">
				<constraints nullable="false"/>
			</column>
			<column name="CREATEDAT" type="datetime">
				<constraints nullable="false"/>
			</column>
			<column name="CREATEDBY" type="varchar(32)">
				<constraints nullable="false"/>
			</column>
			<column name="DECIMALSEPARATOR" type="varchar(1)"/>
			<column name="DESCRIPTION" type="text"/>
			<column name="EMAIL" type="varchar(128)"/>
			<column name="ID" type="varchar(64)">
				<constraints nullable="false"/>
			</column>
			<column name="LOCKED" type="int(1)">
				<constraints nullable="false"/>
			</column>
			<column name="LOGINNAME" type="varchar(255)">
				<constraints nullable="false"/>
			</column>
			<column name="MODIFIEDAT" type="datetime">
				<constraints nullable="false"/>
			</column>
			<column name="MODIFIEDBY" type="varchar(32)">
				<constraints nullable="false"/>
			</column>
			<column name="NAME" type="varchar(255)">
				<constraints nullable="false"/>
			</column>
			<column name="NOTES" type="text"/>
			<column name="PASSWORD" type="varchar(255)">
				<constraints nullable="false"/>
			</column>
			<column name="REFID" type="varchar(64)">
				<constraints nullable="false"/>
			</column>
			<column name="THOUSANDSEPARATOR" type="varchar(1)"/>
			<column name="VERSION" type="bigint(10)"/>
			<column name="DATEFORMAT_ID" type="varchar(64)"/>
		</createTable>
	</changeSet>

	<changeSet author="seava" id="PK-AD_USR">
		<addPrimaryKey 
			constraintName="PK_AD_USR"
			tableName="AD_USR"
			columnNames="ID"/>
	</changeSet>
	
	<changeSet author="seava" id="UK-AD_USR-1">
		<addUniqueConstraint
			constraintName="UK_AD_USR1"
			tableName="AD_USR"
			columnNames="CLIENTID,CODE"/>
	</changeSet>
	
	<changeSet author="seava" id="UK-AD_USR-2">
		<addUniqueConstraint
			constraintName="UK_AD_USR2"
			tableName="AD_USR"
			columnNames="CLIENTID,LOGINNAME"/>
	</changeSet>

</databaseChangeLog>
