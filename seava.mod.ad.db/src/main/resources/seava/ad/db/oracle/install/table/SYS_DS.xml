<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

	<changeSet author="seava" id="TBL-SYS_DS">
		<createTable tableName="SYS_DS">
			<column name="ACTIVE" type="number(1)">
				<constraints nullable="false"/>
			</column>
			<column name="CREATEDAT" type="DATE">
				<constraints nullable="false"/>
			</column>
			<column name="CREATEDBY" type="varchar2(32)">
				<constraints nullable="false"/>
			</column>
			<column name="DESCRIPTION" type="varchar2(400)"/>
			<column name="ID" type="varchar2(64)">
				<constraints nullable="false"/>
			</column>
			<column name="ISASGN" type="number(1)">
				<constraints nullable="false"/>
			</column>
			<column name="MODEL" type="varchar2(255)">
				<constraints nullable="false"/>
			</column>
			<column name="MODIFIEDAT" type="DATE">
				<constraints nullable="false"/>
			</column>
			<column name="MODIFIEDBY" type="varchar2(32)">
				<constraints nullable="false"/>
			</column>
			<column name="NAME" type="varchar2(255)">
				<constraints nullable="false"/>
			</column>
			<column name="NOTES" type="varchar2(4000)"/>
			<column name="REFID" type="varchar2(64)">
				<constraints nullable="false"/>
			</column>
			<column name="VERSION" type="number(10)"/>
		</createTable>
	</changeSet>

	<changeSet author="seava" id="PK-SYS_DS">
		<addPrimaryKey 
			constraintName="PK_SYS_DS"
			tableName="SYS_DS"
			columnNames="ID"/>
	</changeSet>
	
	<changeSet author="seava" id="UK-SYS_DS-1">
		<addUniqueConstraint
			constraintName="UK_SYS_DS1"
			tableName="SYS_DS"
			columnNames="NAME"/>
	</changeSet>
	
	<changeSet author="seava" id="UK-SYS_DS-2">
		<addUniqueConstraint
			constraintName="UK_SYS_DS2"
			tableName="SYS_DS"
			columnNames="MODEL"/>
	</changeSet>

</databaseChangeLog>
