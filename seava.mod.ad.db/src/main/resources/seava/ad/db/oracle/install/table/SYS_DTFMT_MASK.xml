<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

	<changeSet author="seava" id="TBL-SYS_DTFMT_MASK">
		<createTable tableName="SYS_DTFMT_MASK">
			<column name="ACTIVE" type="number(1)">
				<constraints nullable="false"/>
			</column>
			<column name="CREATEDAT" type="DATE">
				<constraints nullable="false"/>
			</column>
			<column name="CREATEDBY" type="varchar2(32)">
				<constraints nullable="false"/>
			</column>
			<column name="ID" type="varchar2(64)">
				<constraints nullable="false"/>
			</column>
			<column name="MASK" type="varchar2(32)">
				<constraints nullable="false"/>
			</column>
			<column name="MODIFIEDAT" type="DATE">
				<constraints nullable="false"/>
			</column>
			<column name="MODIFIEDBY" type="varchar2(32)">
				<constraints nullable="false"/>
			</column>
			<column name="NOTES" type="varchar2(4000)"/>
			<column name="REFID" type="varchar2(64)">
				<constraints nullable="false"/>
			</column>
			<column name="VALUE" type="varchar2(255)">
				<constraints nullable="false"/>
			</column>
			<column name="VERSION" type="number(10)"/>
			<column name="DATEFORMAT_ID" type="varchar2(64)">
				<constraints nullable="false"/>
			</column>
		</createTable>
	</changeSet>

	<changeSet author="seava" id="PK-SYS_DTFMT_MASK">
		<addPrimaryKey 
			constraintName="PK_SYS_DTFMT_MASK"
			tableName="SYS_DTFMT_MASK"
			columnNames="ID"/>
	</changeSet>
	
	<changeSet author="seava" id="UK-SYS_DTFMT_MASK-1">
		<addUniqueConstraint
			constraintName="UK_SYS_DTFMT_MASK1"
			tableName="SYS_DTFMT_MASK"
			columnNames="DATEFORMAT_ID,MASK"/>
	</changeSet>

</databaseChangeLog>
